<div class="container">
<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Suggested budget</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% @events.each do |event| %>
    <!-- <% if @user_events_participations.participant_id == current_user.id %> -->
    <% if event.creator.id == current_user.id %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td>$<%= event.suggested_budget %></td>
        <td><%= event.creator.first_name %></td>
        <td><%= link_to 'Details', event %></td>
        <td><%= link_to 'Edit event', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
</div>
