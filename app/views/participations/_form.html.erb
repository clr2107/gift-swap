<div class="container">
<h2>Add participants to your event</h2>
<div class="form-group">
<form action= "/events/<%=@event.id%>/participations" method="post" id="add-participants">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="email">Email:</label>
  <input class="form-control" type="email" name="user[email]"/>
  <input type="submit" class="btn btn-primary" value="Submit">
</form>

<br>

<% event_creator = @event.creator %>
<%if current_user == event_creator %>
    <form action= "/events/<%= @event.id %>" method="get" id="secret-santa">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="submit" value="Create event" class="btn">
    </form>
<%end%>
</div>

<div class="container ">
<h3>Currently attending:</h3>

<ul class="list-group" id="participant-list">
	<% if @event.participants %>
		<% @event.participants.each do |participant| %>
			<li class="list-group-item"><%= participant.first_name%> <%= participant.last_name%></li>
		<% end %>
	<% end %>
</ul>
</div>
